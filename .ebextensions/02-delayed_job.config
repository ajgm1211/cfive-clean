files:
  "/opt/elasticbeanstalk/hooks/appdeploy/post/02_configure_environment_file.sh":
      mode: "000755"
      owner: root
      group: root
      content: |
        #!/bin/bash
        sudo find /var/www/current/ -type f -exec chmod 644 {} \;
        sudo find /var/www/current/ -type d -exec chmod 755 {} \;
        sudo chown -R webapp /var/www/current/storage /var/www/current/bootstrap/cache /var/www/current/public
        sudo chmod -R ug+rwx /var/www/current/storage /var/www/current/bootstrap/cache /var/www/current/public
        sudo rm -f /var/app/current/bootstrap/config.php
        sudo rm -f /var/app/current/bootstrap/packages.php
        sudo rm -f /var/app/current/bootstrap/services.php
        sudo mkdir -p /var/app/current/storage/framework/sessions
        php /var/www/html/artisan cache:clear